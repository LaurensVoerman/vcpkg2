#ifndef CONFIG_H_INCLUDED
#define CONFIG_H_INCLUDED

// The version of the xml files we can read
// Version history:
// version 0:	Before 08-06-2012 our viewer had no versioning
// version 1:	First version where version number is handled
//				this version can also read config files with designs
//				and layers. It can only write config file with
//				layers.
// version 2:	Remvoed the option to read designs. Added option to
//				specify where the road and roomnetwork are loaded from.
#define OSGRC_VERSION 2

/*
 * machine-specific settings
 */

//
// OSGRC_LITTLE_ENDIAN
//
// Set this if the machine we're compiling on is a little-endian one
// (Currently only used in ByteBuffer.h)
//

#if defined(WIN32) || defined(__linux)
	#define OSGRC_LITTLE_ENDIAN 1
#elif defined(__sgi)
	#undef OSGRC_LITTLE_ENDIAN
#else
	#error Please update the configuration file (Config.h) for this system
#endif

/*
 * cluster communication settings
 */

//
// BROADCAST_LOCALHOST_ONLY
//
// If defined: master won't really broadcast initial existence, but sends UDP packets 
// directly to localhost (for testing purposes). This also binds TCP sockets to localhost.
//

#ifdef WIN32
	#define BROADCAST_LOCALHOST_ONLY
#elif !defined(__linux) && !defined(__sgi)
	#error Please update the configuration file (Config.h) for this system
#endif

//
// DEFAULT_BROADCAST_ADDRESS
// The broadcast IP-address to use when none is specified
//
// DEFAULT_MASTER_ADDRESS
// The default IP-address of the master
//

#if defined(WIN32) || defined(__sgi)
	#define DEFAULT_BROADCAST_ADDRESS 	"127.0.0.1"
	#define DEFAULT_MASTER_ADDRESS		"127.0.0.1"
#elif defined(__linux)
	#define DEFAULT_BROADCAST_ADDRESS 	"192.168.1.255"
	#define DEFAULT_MASTER_ADDRESS		"192.168.1.150"
#else
	#error Please update the configuration file (Config.h) for this system
#endif

//
// NETWORK_PORT
//
// Master listens to this TCP port for incoming slave connections
// Slaves listen to this UDP port for initial broadcast from master
//

#define NETWORK_PORT	8888
#define NETWORK_PORT_AGENTS	8889

//
// MASTER_GUI_LISTEN_PORT
//
// The TCP port that the master listens to for a connection from the
// GUI application
//

#define MASTER_GUI_LISTEN_PORT			9999

//
// SHOW_SWAPLOCK_TIME
//
// If defined use a timer to determine how much time is spent waiting
// on the swap-lock barrier
//

//#define SHOW_SWAPLOCK_TIME

//
// TIXML_USE_STL
//
// Whether TinyXML will internally use STL containers and
// interface with std::string
//

#define TIXML_USE_STL

